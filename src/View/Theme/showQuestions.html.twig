{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Question {{ question.value }}</h1>
    <p>{{ question.id }}. {{ question.value }}</p>
    <a href="/questions/edit?id={{ question.id }}">Edit</a>
    <form action="/questions/delete" method="POST">
        <input type="hidden" name="id" value="{{ question.id }}">
        <button>Delete</button>
    </form>
    <a href="/questions">Back</a>
{% endblock %}

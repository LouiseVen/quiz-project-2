{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Question : {{ question.value }}</h1>
    <p>{{ question.value }}</p>
    
    <form action="/questions/delete" method="POST">
        <input type="hidden" name="id" value="{{ question.id }}">
        <button class="btn btn-primary">Delete</button>
    </form>
    <div class="form-group">
        <a class="btn btn-primary" href="/questions/edit?id={{ question.id }}">Edit</a>
        <a class="btn btn-primary" href="/questions">Back</a>
    </div>
{% endblock %}

{% extends 'layout.html.twig' %}

{% block content %}
    <section id="questionList">
        <h1>Toutes les questions</h1>
        <ul>
            {% for question in questions %}
                <li><a href="/questions/show?id={{ question.id }}">{{ question.id }}. {{ question.value }}</a></li>
            {% else %}
                <li>Nothing to display</li>
            {% endfor %}
        </ul>

        <button type="submit" class="btn-end m-5">
            <a href="/questions/add">Ajouter</a>
        </button>
    </section>
{% endblock %}
